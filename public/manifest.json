{
    "manifest_version": 3,
    "name": "shrtn",
    "version": "1.0.0",
    "description": "A handy url shortener",

    "action": {
        "default_popup": "index.html"
    },

    "icons": {

    },

    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ],

    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]

}